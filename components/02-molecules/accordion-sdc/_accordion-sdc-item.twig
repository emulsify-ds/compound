{#
 # Available Variables:
 # - accordion_sdc__item__heading
 # - accordion_sdc__item__heading__level (passed down by `accordion_sdc.twig`)
 #
 # Available Blocks:
 # - accordion_sdc__item__content
 #}

{% set accordion_sdc__item__base_class = 'accordion-sdc-item' %}
{% set accordion_sdc__item__attributes = accordion_sdc__item__attributes|default([]) %}
{% set accordion_sdc__item__content__attributes = accordion_sdc__item__content__attributes|default([]) %}

{% set accordion_sdc__item__attributes = accordion_sdc__item__attributes|merge({
  'data-accordion-sdc-expanded': 'true',
  'class': bem(accordion_sdc__item__base_class, accordion_sdc__item__modifiers, accordion_sdc__item__blockname, ['js-accordion-sdc-item']),
}) %}

{% set accordion_sdc__item__content__attributes = accordion_sdc__item__content__attributes|merge({
  'class': bem('content', accordion_sdc__item__modifiers, accordion_sdc__item__base_class),
}) %}

{% set accordion_sdc__item__button__content %}
  {{ accordion_sdc__item__heading }}
  {% include "@atoms/images/icons/_icon.twig" with {
    icon__name: 'chevron-down',
    icon__blockname: accordion_sdc__item__base_class,
    icon__decorative: true,
  } %}
{% endset %}

{% set accordion_sdc__item__heading__content %}
  {% include "@atoms/buttons/button.twig" with {
    button__content: accordion_sdc__item__button__content,
    button__base_class: 'toggle',
    button__additional_classes: ['js-accordion-sdc-item__toggle'],
    button__blockname: accordion_sdc__item__base_class,
    button__attributes: {
      'aria-controls': accordion_sdc__item__content__id,
    }
  } %}
{% endset %}

<div {{ add_attributes(accordion_sdc__item__attributes) }}>
  {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: accordion_sdc__item__heading__level|default('2'),
    heading__blockname: accordion_sdc__item__base_class,
    heading: accordion_sdc__item__heading__content,
  } %}
  <div {{ add_attributes(accordion_sdc__item__content__attributes) }}>
    {% block accordion_sdc__item__content %}
      {% include "@atoms/text/text/01-paragraph.twig" with {
        paragraph_content: accordion_sdc__item__content,
      } %}
    {% endblock %}
  </div>
</div>
