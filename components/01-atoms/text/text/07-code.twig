 {#
/**
 * Available variables:
 * - code__content - the content of the code (typically text)
 *
 * Available blocks:
 * - - code_content - used to replace the content of the code with something other than text
 *   for example: A formatted text field in Drupal
 */
#}

{% set code__base_class = code__base_class|default('code') %}
{% set pre__base_class = pre__base_class|default('pre') %}
{% set code__attributes = code__attributes|default({}) %}
{% set pre__attributes = pre__attributes|default({}) %}
{% set code__attributes = code__attributes|merge({
  'class': bem(code__base_class, code__modifiers, code__blockname),
}) %} 
{% set pre__attributes = pre__attributes|merge({
  'class': bem(pre__base_class, pre__modifiers, pre__blockname),
}) %}

<pre {{ add_attributes(pre__attributes) }}>
  <code {{ add_attributes(code__attributes) }}>
    {% block code_content %}
      {{- code_content -}}
    {% endblock %}
  </code>
</pre>

