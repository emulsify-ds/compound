{#
/**
 * Available variables:
 * - video_object__attributes - <video> HTML5 specific attributes
 * - video__urls - array of video URLs. Ideally, MP4, WEBM, and OGG files.
 */
#}

{% set video_object__attributes = video_object__attributes|default({
  'preload': '',
  'controls': ''
}) %}

<video {{ add_attributes(video_object__attributes) }}>
  {% for video__url in video__urls %}
    <source src="{{ video__url }}" type="video/mp4">
  {% endfor %}
  {{ "Your browser does not support the video tag."|t }}
</video>
